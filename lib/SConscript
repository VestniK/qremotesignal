Import('BaseEnv')

env = BaseEnv.Clone()
env['CPPPATH'] = ['.','QtSoap']
env.EnableQt4Modules(['QtCore','QtXml','QtNetwork'])

Sources = ['baseconverters.cpp','comunicationmanager.cpp',
           'QtSoap/qtsoap.cpp']

Headers = ['QRemoteSignal','absservice.h','baseconverters.h',
           'comunicationmanager.h','baseexception.h',
           'remotecall.h','absremotecallserializer.h',
           'soapserializer.h']

libs = {}
libs['shared'] = env.SharedLibrary('QRemoteSignal',Sources)
libs['static'] = env.Library('QRemoteSignal',Sources)

Return('libs')